<%= content_for :title_text do %>
	<% if @title.nil? %>
		<h1 class='h1'>Eamcet Colleges Search Result</h1>
	<% else %>
		<h1 class='h1'><%= @title %></h1>
	<% end %>	
<% end %>

<% content_for :rightside do %>
<div class='search'>
	<%= render :partial => '/common/college_search' %>
</div>
	<%= render :partial => 'common/ads/college_page'%>
	<%= render :partial => 'common/accordian'%>
<% end %>

<div class='search results'>
	<ul>

	<% @colleges.each do |college| %>
	<% begin %>
		<li><%= link_to college.name, college_path(college)%> - <%= districts(college.dist)%> - <%= college.place%></li>			
	<% rescue Exception => e%>
		<% raise college.inspect%>
	<% end%>
	<% end %>
	</ul>
</div>

<%= will_paginate @colleges%>